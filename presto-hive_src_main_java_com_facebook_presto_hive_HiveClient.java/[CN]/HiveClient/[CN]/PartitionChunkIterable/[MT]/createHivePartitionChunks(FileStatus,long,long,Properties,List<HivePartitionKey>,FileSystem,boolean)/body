{
  BlockLocation[] fileBlockLocations=fs.getFileBlockLocations(file,start,length);
  ImmutableList.Builder<HivePartitionChunk> builder=ImmutableList.builder();
  if (splittable) {
    for (    BlockLocation blockLocation : fileBlockLocations) {
      builder.add(new HivePartitionChunk(file.getPath(),blockLocation.getOffset(),blockLocation.getLength(),schema,partitionKeys,columns,toInetAddress(blockLocation.getHosts())));
    }
  }
 else {
    builder.add(new HivePartitionChunk(file.getPath(),start,length,schema,partitionKeys,columns,toInetAddress(fileBlockLocations[0].getHosts())));
  }
  return builder.build();
}
