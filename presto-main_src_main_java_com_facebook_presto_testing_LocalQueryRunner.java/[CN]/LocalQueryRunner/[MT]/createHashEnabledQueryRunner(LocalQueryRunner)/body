{
  Session session=localQueryRunner.getDefaultSession();
  Session.SessionBuilder builder=Session.builder().setUser(session.getUser()).setSource(session.getSource()).setCatalog(session.getCatalog()).setTimeZoneKey(session.getTimeZoneKey()).setLocale(session.getLocale()).setSystemProperties(ImmutableMap.of("optimizer.optimize_hash_generation","true"));
  return new LocalQueryRunner(builder.build());
}
