{
  Session session=localQueryRunner.getDefaultSession();
  Session.SessionBuilder builder=Session.builder(localQueryRunner.getMetadata().getSessionPropertyManager()).setUser(session.getUser()).setSource(session.getSource().orElse(null)).setCatalog(session.getCatalog()).setTimeZoneKey(session.getTimeZoneKey()).setLocale(session.getLocale()).setSystemProperties(ImmutableMap.of("optimizer.optimize_hash_generation","true"));
  return new LocalQueryRunner(builder.build());
}
