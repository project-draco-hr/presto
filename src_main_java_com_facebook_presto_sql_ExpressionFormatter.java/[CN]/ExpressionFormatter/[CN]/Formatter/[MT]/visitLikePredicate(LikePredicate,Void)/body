{
  StringBuilder builder=new StringBuilder();
  builder.append('(').append(ExpressionFormatter.toString(node.getValue())).append(" LIKE ").append(ExpressionFormatter.toString(node.getPattern()));
  if (node.getEscape() != null) {
    builder.append(" ESCAPE ").append(ExpressionFormatter.toString(node.getEscape()));
  }
  builder.append(')');
  return builder.toString();
}
