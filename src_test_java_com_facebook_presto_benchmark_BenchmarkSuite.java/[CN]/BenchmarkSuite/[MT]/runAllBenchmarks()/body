{
  for (  AbstractBenchmark benchmark : BENCHMARKS) {
    try (OutputStream jmeterOut=new FileOutputStream(createOutputFile(String.format("%s/jmeter/%s.jtl",outputDirectory,benchmark.getBenchmarkName())));OutputStream jsonOut=new FileOutputStream(createOutputFile(String.format("%s/json/%s.json",outputDirectory,benchmark.getBenchmarkName())));OutputStream csvOut=new FileOutputStream(createOutputFile(String.format("%s/csv/%s.csv",outputDirectory,benchmark.getBenchmarkName())))){
      benchmark.runBenchmark(new ForwardingBenchmarkResultWriter(ImmutableList.of(new JMeterBenchmarkResultWriter(benchmark.getDefaultResult(),jmeterOut),new JsonBenchmarkResultWriter(jsonOut),new SimpleLineBenchmarkResultWriter(csvOut))));
    }
   }
}
