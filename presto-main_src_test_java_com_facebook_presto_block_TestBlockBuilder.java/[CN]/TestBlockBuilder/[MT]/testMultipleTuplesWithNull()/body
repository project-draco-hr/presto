{
  BlockCursor cursor=new BlockBuilder(SINGLE_LONG).appendNull().append(42).appendNull().append(42).build().cursor();
  assertTrue(cursor.advanceNextPosition());
  assertTrue(cursor.isNull());
  assertTrue(cursor.advanceNextPosition());
  assertEquals(cursor.getLong(),42L);
  assertTrue(cursor.advanceNextPosition());
  assertTrue(cursor.isNull());
  assertTrue(cursor.advanceNextPosition());
  assertEquals(cursor.getLong(),42L);
}
