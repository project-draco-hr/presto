{
  Iterable<Split> splits=retry().stopOn(NotFoundException.class).stopOnIllegalExceptions().runUnchecked(new Callable<Iterable<Split>>(){
    @Override public Iterable<Split> call() throws Exception {
      return importClient.getPartitionSplits(partitions);
    }
  }
);
  return new DataSource(dataSourceName,splits);
}
