{
  TaskState state=taskStateMachine.getState();
  List<ExecutionFailureInfo> failures=ImmutableList.of();
  if (state == TaskState.FAILED) {
    failures=toFailures(taskStateMachine.getFailureCauses());
  }
  return new TaskInfo(new TaskStatus(taskStateMachine.getTaskId(),TASK_INSTANCE_ID,nextTaskInfoVersion.getAndIncrement(),state,location,failures,0,0,new DataSize(0,BYTE)),DateTime.now(),outputBuffer.getInfo(),ImmutableSet.<PlanNodeId>of(),taskContext.getTaskStats(),true);
}
