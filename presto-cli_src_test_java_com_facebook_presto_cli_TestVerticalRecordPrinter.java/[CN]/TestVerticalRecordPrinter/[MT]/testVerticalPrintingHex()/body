{
  StringWriter writer=new StringWriter();
  List<String> fieldNames=ImmutableList.of("first","binary","last");
  OutputPrinter printer=new VerticalRecordPrinter(fieldNames,writer);
  printer.printRows(rows(row("hello",bytes("hello"),"world"),row("a",bytes("some long text that is more than 16 bytes"),"b"),row("cat",bytes(""),"dog")),true);
  printer.finish();
  String expected="" + "-[ RECORD 1 ]-------------------------------------------\n" + "first  | hello\n"+ "binary | 68 65 6c 6c 6f\n"+ "last   | world\n"+ "-[ RECORD 2 ]-------------------------------------------\n"+ "first  | a\n"+ "binary | 73 6f 6d 65 20 6c 6f 6e 67 20 74 65 78 74 20 74\n"+ "       | 68 61 74 20 69 73 20 6d 6f 72 65 20 74 68 61 6e\n"+ "       | 20 31 36 20 62 79 74 65 73\n"+ "last   | b\n"+ "-[ RECORD 3 ]-------------------------------------------\n"+ "first  | cat\n"+ "binary | \n"+ "last   | dog\n";
  assertEquals(writer.getBuffer().toString(),expected);
}
