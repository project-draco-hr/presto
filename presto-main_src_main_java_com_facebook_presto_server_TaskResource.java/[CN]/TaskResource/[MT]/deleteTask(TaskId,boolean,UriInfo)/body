{
  requireNonNull(taskId,"taskId is null");
  TaskInfo taskInfo;
  if (abort) {
    taskInfo=taskManager.abortTask(taskId);
  }
 else {
    taskInfo=taskManager.cancelTask(taskId);
  }
  if (shouldSummarize(uriInfo)) {
    taskInfo=taskInfo.summarize();
  }
  return Response.ok(taskInfo).build();
}
