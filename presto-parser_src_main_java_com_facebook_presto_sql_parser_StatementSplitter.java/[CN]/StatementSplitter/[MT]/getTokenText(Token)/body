{
switch (token.getType()) {
case StatementLexer.STRING:
    return "'" + token.getText().replace("'","''") + "'";
case StatementLexer.QUOTED_IDENT:
  return "\"" + token.getText().replace("\"","\"\"") + "\"";
case StatementLexer.BACKQUOTED_IDENT:
return "`" + token.getText().replace("`","``") + "`";
}
return token.getText();
}
