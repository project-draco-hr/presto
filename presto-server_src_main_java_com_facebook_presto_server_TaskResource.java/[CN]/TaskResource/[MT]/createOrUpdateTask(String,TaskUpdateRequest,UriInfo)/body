{
  try {
    checkNotNull(taskUpdateRequest,"taskUpdateRequest is null");
    TaskInfo taskInfo=taskManager.updateTask(taskUpdateRequest.getSession(),taskUpdateRequest.getQueryId(),taskUpdateRequest.getStageId(),taskId,taskUpdateRequest.getFragment(),taskUpdateRequest.getSources(),taskUpdateRequest.getOutputIds());
    return Response.ok().entity(taskInfo).build();
  }
 catch (  Exception e) {
    throw Throwables.propagate(e);
  }
}
