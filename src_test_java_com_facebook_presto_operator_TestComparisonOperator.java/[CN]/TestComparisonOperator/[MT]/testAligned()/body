{
  UncompressedBlockStream left=new UncompressedBlockStream(TupleInfo.SINGLE_LONG,ImmutableList.of(createLongsBlock(0,1,2,3,4,5),createLongsBlock(5,6,7,8,9,10)));
  UncompressedBlockStream right=new UncompressedBlockStream(TupleInfo.SINGLE_LONG,ImmutableList.of(createLongsBlock(0,1,0,2,5,3),createLongsBlock(5,6,8,6,11,4)));
  ComparisonOperator operator=new ComparisonOperator(left,right,new LongLessThanComparison());
  Cursor cursor=operator.cursor();
  assertNextPosition(cursor,3);
  assertNextPosition(cursor,6);
  assertNextPosition(cursor,8);
  assertFalse(cursor.advanceNextPosition());
  assertTrue(cursor.isFinished());
}
