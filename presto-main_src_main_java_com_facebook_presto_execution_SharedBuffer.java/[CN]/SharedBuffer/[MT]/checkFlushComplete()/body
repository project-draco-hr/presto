{
  checkState(Thread.holdsLock(this),"Thread must hold a lock on the %s",SharedBuffer.class.getSimpleName());
  if (state.get() == FLUSHING) {
    for (    NamedBuffer namedBuffer : namedBuffers.values()) {
      if (!namedBuffer.checkCompletion()) {
        return;
      }
    }
    destroy();
  }
}
