{
  List<Type> types=ImmutableList.of(VARCHAR,BIGINT,BIGINT);
  ValuesOperator source=new ValuesOperator(driverContext.addOperatorContext(0,"values"),types,rowPagesBuilder(types).addSequencePage(10,20,30,40).build());
  MaterializingOperator sink=createSinkOperator(source);
  Driver driver=new Driver(driverContext,source,sink);
  assertSame(driver.getDriverContext(),driverContext);
  assertFalse(driver.isFinished());
  driver.close();
  assertTrue(driver.isFinished());
  assertTrue(sink.isFinished());
  assertTrue(source.isFinished());
}
