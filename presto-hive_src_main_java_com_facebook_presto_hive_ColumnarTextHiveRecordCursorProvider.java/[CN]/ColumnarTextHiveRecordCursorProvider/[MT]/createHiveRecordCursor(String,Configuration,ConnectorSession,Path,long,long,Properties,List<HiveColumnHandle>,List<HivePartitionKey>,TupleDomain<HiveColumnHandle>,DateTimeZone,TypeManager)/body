{
  if (!isDeserializerClass(schema,ColumnarSerDe.class)) {
    return Optional.empty();
  }
  RecordReader<?,?> recordReader=HiveUtil.createRecordReader(configuration,path,start,length,schema,columns);
  return Optional.<HiveRecordCursor>of(new ColumnarTextHiveRecordCursor<>(columnarTextRecordReader(recordReader),length,schema,partitionKeys,columns,hiveStorageTimeZone,typeManager));
}
