{
  if (!usesColumnarTextSerDe(schema)) {
    return Optional.absent();
  }
  RecordReader<?,?> recordReader=HiveUtil.createRecordReader(clientId,configuration,path,start,length,schema,columns);
  return Optional.<HiveRecordCursor>of(new ColumnarTextHiveRecordCursor<>(columnarTextRecordReader(recordReader),length,schema,partitionKeys,columns,hiveStorageTimeZone,DateTimeZone.forID(session.getTimeZoneKey().getId()),typeManager));
}
