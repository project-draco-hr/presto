{
  boolean verboseStats=getVerboseStats(session);
  TaskContext taskContext=new TaskContext(taskStateMachine,taskNotificationExecutor,session,isBigQueryEnabled(session,false) ? bigQueryMaxTaskMemoryUsage : maxTaskMemoryUsage,checkNotNull(operatorPreAllocatedMemory,"operatorPreAllocatedMemory is null"),verboseStats,cpuTimerEnabled);
  return createSqlTaskExecution(taskStateMachine,taskContext,sharedBuffer,fragment,sources,planner,taskExecutor,taskNotificationExecutor,queryMonitor);
}
