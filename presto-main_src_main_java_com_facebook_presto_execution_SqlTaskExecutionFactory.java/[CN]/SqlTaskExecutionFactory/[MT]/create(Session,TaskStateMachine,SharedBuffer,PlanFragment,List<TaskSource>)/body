{
  boolean verboseStats=getVerboseStats(session);
  TaskContext taskContext=new TaskContext(taskStateMachine,taskNotificationExecutor,session,checkNotNull(maxTaskMemoryUsage,"maxTaskMemoryUsage is null"),checkNotNull(operatorPreAllocatedMemory,"operatorPreAllocatedMemory is null"),verboseStats,cpuTimerEnabled);
  return createSqlTaskExecution(taskStateMachine,taskContext,sharedBuffer,fragment,sources,planner,taskExecutor,taskNotificationExecutor,queryMonitor);
}
