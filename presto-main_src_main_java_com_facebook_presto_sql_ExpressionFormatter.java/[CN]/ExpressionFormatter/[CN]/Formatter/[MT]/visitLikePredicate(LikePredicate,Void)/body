{
  StringBuilder builder=new StringBuilder();
  builder.append('(').append(process(node.getValue(),null)).append(" LIKE ").append(process(node.getPattern(),null));
  if (node.getEscape() != null) {
    builder.append(" ESCAPE ").append(process(node.getEscape(),null));
  }
  builder.append(')');
  return builder.toString();
}
