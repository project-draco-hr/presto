{
  checkNotNull(tuple,"tuple is null");
  checkState(!finished,"already finished");
  if (!initialized) {
    initialized=true;
  }
  if (lastTuple == null) {
    startPosition=0;
    tupleCount=1;
    lastTuple=tuple;
  }
 else {
    if (!tuple.equals(lastTuple)) {
      writeRunLengthEncodedBlock(sliceOutput,startPosition,tupleCount,lastTuple);
      lastTuple=tuple;
      startPosition+=tupleCount;
      tupleCount=0;
    }
    tupleCount++;
  }
  return this;
}
