{
  double fractional=size;
  String unit="B";
  if (fractional >= 1024) {
    fractional/=1024;
    unit="K";
  }
  if (fractional >= 1024) {
    fractional/=1024;
    unit="M";
  }
  if (fractional >= 1024) {
    fractional/=1024;
    unit="G";
  }
  if (fractional >= 1024) {
    fractional/=1024;
    unit="T";
  }
  if (fractional >= 1024) {
    fractional/=1024;
    unit="P";
  }
  DecimalFormat format=getFormat(fractional);
  return String.format("%s%s",format.format(fractional),unit);
}
