{
  double fractional=count;
  String unit="";
  if (fractional > 1000) {
    fractional/=1000;
    unit="K";
  }
  if (fractional > 1000) {
    fractional/=1000;
    unit="M";
  }
  if (fractional > 1000) {
    fractional/=1000;
    unit="B";
  }
  if (fractional > 1000) {
    fractional/=1000;
    unit="T";
  }
  if (fractional > 1000) {
    fractional/=1000;
    unit="Q";
  }
  DecimalFormat format=getFormat(fractional);
  return String.format("%s%s",format.format(fractional),unit);
}
