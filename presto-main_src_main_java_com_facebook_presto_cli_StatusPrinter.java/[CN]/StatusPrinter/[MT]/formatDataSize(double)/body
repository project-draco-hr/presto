{
  String unit="B";
  if (dataSize > 1000) {
    dataSize/=1024;
    unit="K";
  }
  if (dataSize > 1000) {
    dataSize/=1024;
    unit="M";
  }
  if (dataSize > 1000) {
    dataSize/=1024;
    unit="G";
  }
  if (dataSize > 1000) {
    dataSize/=1024;
    unit="T";
  }
  if (dataSize > 1000) {
    dataSize/=1024;
    unit="P";
  }
  return String.format("%d%s",(long)dataSize,unit);
}
