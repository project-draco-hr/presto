{
  cache=CacheBuilder.newBuilder().expireAfterAccess(expiration,unit).build(new CacheLoader<PathAndKey,FileSystem>(){
    @Override public FileSystem load(    PathAndKey pathAndKey) throws Exception {
      return FileSystem.get(pathAndKey.getPath().toUri(),HadoopConfiguration.HADOOP_CONFIGURATION.get());
    }
  }
);
}
