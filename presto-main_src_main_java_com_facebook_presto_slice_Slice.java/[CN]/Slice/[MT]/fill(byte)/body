{
  int offset=0;
  int length=size;
  long longValue=Longs.fromBytes(value,value,value,value,value,value,value,value);
  while (length >= SIZE_OF_LONG) {
    unsafe.putLong(base,this.address + offset,longValue);
    offset+=SIZE_OF_LONG;
    length-=SIZE_OF_LONG;
  }
  while (length > 0) {
    unsafe.putByte(base,this.address + offset,value);
    offset++;
    length--;
  }
}
