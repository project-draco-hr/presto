{
  for (byte size=0; size < 100; size++) {
    Slice slice=Slices.allocate(size);
    for (int i=0; i < slice.length(); i++) {
      assertEquals(slice.getByte(i),(byte)0);
    }
    slice.fill((byte)0xA5);
    for (int i=0; i < slice.length(); i++) {
      assertEquals(slice.getByte(i),(byte)0xA5);
    }
    slice.clear();
    for (int i=0; i < slice.length(); i++) {
      assertEquals(slice.getByte(i),(byte)0);
    }
  }
}
