{
  Preconditions.checkNotNull(taskId,"taskId is null");
  TaskExecution taskExecution=tasks.get(taskId);
  if (taskExecution == null) {
    TaskInfo taskInfo=taskInfos.get(taskId);
    if (taskInfo == null) {
      taskInfo=new TaskInfo(taskId,Long.MAX_VALUE,TaskState.CANCELED,URI.create("unknown"),new SharedBufferInfo(QueueState.FINISHED,0,ImmutableList.<BufferInfo>of()),ImmutableSet.<PlanNodeId>of(),new ExecutionStatsSnapshot(),ImmutableList.<SplitExecutionStats>of(),ImmutableList.<FailureInfo>of(),ImmutableMap.<PlanNodeId,Set<?>>of());
      TaskInfo existingTaskInfo=taskInfos.putIfAbsent(taskId,taskInfo);
      if (existingTaskInfo != null) {
        taskInfo=existingTaskInfo;
      }
    }
    return taskInfo;
  }
  taskExecution.cancel();
  tasks.remove(taskId);
  TaskInfo taskInfo=taskExecution.getTaskInfo(false);
  taskInfos.putIfAbsent(taskId,taskInfo);
  return taskExecution.getTaskInfo(false);
}
