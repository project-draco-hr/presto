{
  SqlTask sqlTask=createInitialTask();
  TaskInfo taskInfo=sqlTask.updateTask(TEST_SESSION,PLAN_FRAGMENT,ImmutableList.of(new TaskSource(TABLE_SCAN_NODE_ID,ImmutableSet.of(SPLIT),true)),INITIAL_EMPTY_OUTPUT_BUFFERS.withBuffer(OUT,0).withNoMoreBufferIds());
  assertEquals(taskInfo.getState(),TaskState.RUNNING);
  taskInfo=sqlTask.getTaskInfo();
  assertEquals(taskInfo.getState(),TaskState.RUNNING);
  sqlTask.abortTaskResults(OUT);
  taskInfo=sqlTask.getTaskInfo(taskInfo.getState()).get(1,SECONDS);
  assertEquals(taskInfo.getState(),TaskState.FINISHED);
  taskInfo=sqlTask.getTaskInfo();
  assertEquals(taskInfo.getState(),TaskState.FINISHED);
}
