{
  Preconditions.checkNotNull(sample,"sample is null");
  try {
    outputStream.write(String.format("<sample lb=\"%s\" ts=\"%d\" t=\"%d\" s=\"%b\" />\n",StringEscapeUtils.escapeXml(sample.getLabel()),sample.getTimeStamp(),sample.getElapsedTime(),sample.isSuccess()).getBytes(Charsets.UTF_8));
  }
 catch (  IOException e) {
    Throwables.propagate(e);
  }
  return this;
}
