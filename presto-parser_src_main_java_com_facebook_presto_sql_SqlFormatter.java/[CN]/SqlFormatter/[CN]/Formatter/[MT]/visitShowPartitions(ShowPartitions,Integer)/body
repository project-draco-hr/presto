{
  builder.append("SHOW PARTITIONS FROM ").append(node.getTable());
  if (node.getWhere().isPresent()) {
    builder.append(" WHERE ").append(formatExpression(node.getWhere().get()));
  }
  if (!node.getOrderBy().isEmpty()) {
    builder.append(" ORDER BY ").append(formatSortItems(node.getOrderBy()));
  }
  if (node.getLimit().isPresent()) {
    builder.append(" LIMIT ").append(node.getLimit().get());
  }
  return null;
}
