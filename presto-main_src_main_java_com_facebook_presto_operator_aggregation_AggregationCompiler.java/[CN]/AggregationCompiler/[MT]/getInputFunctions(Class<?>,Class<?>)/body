{
  List<Method> inputFunctions=FluentIterable.from(CompilerUtils.findPublicStaticMethodsWithAnnotation(clazz,InputFunction.class)).filter(new Predicate<Method>(){
    @Override public boolean apply(    Method method){
      return method.getParameterTypes()[0] == stateClass;
    }
  }
).toList();
  checkArgument(!inputFunctions.isEmpty(),"Aggregation has no input functions");
  return inputFunctions;
}
