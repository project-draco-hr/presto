{
  Iterator<String> columnNames=node.getColumnNames().iterator();
  String columns="";
  String columnName="";
  int nameWidth=0;
  while (columnNames.hasNext()) {
    columnName=columnNames.next();
    columns+=columnName;
    nameWidth+=columnName.length();
    if (columnNames.hasNext()) {
      columns+=", ";
    }
    if (nameWidth >= MAX_NAME_WIDTH) {
      columns+="\\n";
      nameWidth=0;
    }
  }
  return columns;
}
