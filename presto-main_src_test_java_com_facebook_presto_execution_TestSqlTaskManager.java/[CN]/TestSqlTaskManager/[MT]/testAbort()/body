{
  TaskInfo taskInfo=sqlTaskManager.updateTask(session,taskId,testFragment,ImmutableList.of(new TaskSource(tableScanNodeId,ImmutableSet.of(new ScheduledSplit(0,split)),true)),INITIAL_EMPTY_OUTPUT_BUFFERS.withBuffer("out",new UnpartitionedPagePartitionFunction()).withNoMoreBufferIds());
  assertEquals(taskInfo.getState(),TaskState.RUNNING);
  taskInfo=sqlTaskManager.getTaskInfo(taskInfo.getTaskId(),false);
  assertEquals(taskInfo.getState(),TaskState.RUNNING);
  sqlTaskManager.abortTaskResults(taskInfo.getTaskId(),"out");
  sqlTaskManager.waitForStateChange(taskInfo.getTaskId(),taskInfo.getState(),new Duration(1,TimeUnit.SECONDS));
  taskInfo=sqlTaskManager.getTaskInfo(taskInfo.getTaskId(),false);
  assertEquals(taskInfo.getState(),TaskState.FINISHED);
  taskInfo=sqlTaskManager.getTaskInfo(taskInfo.getTaskId(),false);
  assertEquals(taskInfo.getState(),TaskState.FINISHED);
}
