{
  mockClient.setThrowException(true);
  try {
    metastore.getAllDatabases();
  }
 catch (  Exception e) {
    assertInstanceOf(e,RuntimeException.class);
  }
  assertEquals(mockClient.getAccessCount(),1);
  try {
    metastore.getAllDatabases();
  }
 catch (  Exception e) {
    assertInstanceOf(e,RuntimeException.class);
  }
  assertEquals(mockClient.getAccessCount(),2);
}
