{
  ConfigAssertions.assertRecordedDefaults(ConfigAssertions.recordDefaults(QueryManagerConfig.class).setCoordinator(true).setMaxShardProcessorThreads(Runtime.getRuntime().availableProcessors() * 4).setMaxQueryAge(new Duration(15,TimeUnit.MINUTES)).setClientTimeout(new Duration(5,TimeUnit.MINUTES)).setMaxOperatorMemoryUsage(new DataSize(256,Unit.MEGABYTE)).setMaxPendingSplitsPerNode(100).setExchangeMaxBufferedPages(100).setExchangeExpectedPagesPerRequest(10).setExchangeConcurrentRequestMultiplier(3).setQueryManagerExecutorPoolSize(100).setSinkMaxBufferedPages(null).setRemoteTaskMaxConsecutiveErrorCount(Integer.MAX_VALUE).setRemoteTaskMinErrorDuration(new Duration(3,TimeUnit.MINUTES)));
}
