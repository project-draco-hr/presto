{
  ConfigAssertions.assertRecordedDefaults(ConfigAssertions.recordDefaults(QueryManagerConfig.class).setTaskCpuTimerEnabled(true).setMaxShardProcessorThreads(Runtime.getRuntime().availableProcessors() * 4).setMaxQueryAge(new Duration(15,TimeUnit.MINUTES)).setMaxQueryHistory(100).setInfoMaxAge(new Duration(15,TimeUnit.MINUTES)).setClientTimeout(new Duration(5,TimeUnit.MINUTES)).setMaxTaskMemoryUsage(new DataSize(256,Unit.MEGABYTE)).setOperatorPreAllocatedMemory(new DataSize(16,Unit.MEGABYTE)).setMaxPendingSplitsPerNode(100).setExchangeMaxBufferSize(new DataSize(32,Unit.MEGABYTE)).setExchangeConcurrentRequestMultiplier(3).setQueryManagerExecutorPoolSize(5).setSinkMaxBufferSize(new DataSize(32,Unit.MEGABYTE)).setRemoteTaskMaxConsecutiveErrorCount(10).setRemoteTaskMinErrorDuration(new Duration(2,TimeUnit.MINUTES)));
}
