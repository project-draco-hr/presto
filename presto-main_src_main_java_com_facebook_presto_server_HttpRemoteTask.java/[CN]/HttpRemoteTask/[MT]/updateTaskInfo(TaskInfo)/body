{
  if (newValue.getState().isDone()) {
    pendingSplits.clear();
  }
  taskInfo.setIf(newValue,new Predicate<TaskInfo>(){
    @Override public boolean apply(    TaskInfo oldValue){
      if (oldValue.getState().isDone()) {
        return false;
      }
      if (newValue.getVersion() < oldValue.getVersion()) {
        return false;
      }
      return true;
    }
  }
);
}
