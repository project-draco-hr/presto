{
  try (SetThreadName ignored=new SetThreadName("ContinuousTaskInfoFetcher-%s",taskId)){
synchronized (this) {
      future=null;
    }
    try {
      TaskInfo taskInfo=getTaskInfo();
      if (!taskInfo.getState().isDone()) {
        getErrorTracker.requestFailed(cause);
      }
    }
 catch (    Error e) {
      failTask(e);
      abort();
      throw e;
    }
catch (    RuntimeException e) {
      failTask(e);
      abort();
    }
 finally {
      scheduleNextRequest();
    }
  }
 }
