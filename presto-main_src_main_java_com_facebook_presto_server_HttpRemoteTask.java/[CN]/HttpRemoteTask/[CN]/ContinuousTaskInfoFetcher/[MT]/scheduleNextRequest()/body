{
  TaskInfo taskInfo=HttpRemoteTask.this.taskInfo.get();
  if (!running || taskInfo.getState().isDone()) {
    return;
  }
  if (future != null && !future.isDone()) {
    log.error("Can not reschedule update because an update is already running");
    return;
  }
  Request request=prepareGet().setUri(uriBuilderFrom(taskInfo.getSelf()).addParameter("summarize").build()).setHeader(HttpHeaders.CONTENT_TYPE,MediaType.JSON_UTF_8.toString()).setHeader(PrestoHeaders.PRESTO_CURRENT_STATE,taskInfo.getState().toString()).setHeader(PrestoHeaders.PRESTO_MAX_WAIT,"200ms").build();
  future=httpClient.executeAsync(request,createFullJsonResponseHandler(taskInfoCodec));
  Futures.addCallback(future,new SimpleHttpResponseHandler<>(this,request.getUri()),executor);
}
