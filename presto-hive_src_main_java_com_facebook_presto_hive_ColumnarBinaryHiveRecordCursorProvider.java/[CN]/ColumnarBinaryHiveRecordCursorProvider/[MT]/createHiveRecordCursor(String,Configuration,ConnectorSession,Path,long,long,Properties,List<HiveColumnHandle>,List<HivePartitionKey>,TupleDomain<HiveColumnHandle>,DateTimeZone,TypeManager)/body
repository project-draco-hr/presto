{
  if (!usesColumnarBinarySerDe(schema)) {
    return Optional.absent();
  }
  RecordReader<?,?> recordReader=HiveUtil.createRecordReader(clientId,configuration,path,start,length,schema,columns);
  return Optional.<HiveRecordCursor>of(new ColumnarBinaryHiveRecordCursor<>(bytesRecordReader(recordReader),length,schema,partitionKeys,columns,DateTimeZone.forID(session.getTimeZoneKey().getId()),typeManager));
}
