{
  if (!usesColumnarBinarySerDe(schema)) {
    return Optional.empty();
  }
  RecordReader<?,?> recordReader=HiveUtil.createRecordReader(clientId,configuration,path,start,length,schema,columns,typeManager);
  return Optional.<HiveRecordCursor>of(new ColumnarBinaryHiveRecordCursor<>(bytesRecordReader(recordReader),length,schema,partitionKeys,columns,hiveStorageTimeZone,DateTimeZone.forID(session.getTimeZoneKey().getId()),typeManager));
}
