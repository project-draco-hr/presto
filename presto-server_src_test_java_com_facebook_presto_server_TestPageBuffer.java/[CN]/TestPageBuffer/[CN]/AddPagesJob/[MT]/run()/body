{
  started.countDown();
  try {
    for (Page page=pages.peek(); page != null; page=pages.peek()) {
      try {
        pageBuffer.addPage(page);
        assertNotNull(pages.poll());
      }
 catch (      InterruptedException e) {
        Thread.currentThread().interrupt();
        throw Throwables.propagate(e);
      }
    }
  }
  finally {
    finished.countDown();
  }
}
