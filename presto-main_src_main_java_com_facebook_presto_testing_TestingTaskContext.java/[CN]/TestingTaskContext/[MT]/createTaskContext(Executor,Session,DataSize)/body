{
  MemoryPool memoryPool=new MemoryPool(new MemoryPoolId("test"),new DataSize(1,GIGABYTE));
  MemoryPool systemMemoryPool=new MemoryPool(new MemoryPoolId("testSystem"),new DataSize(1,GIGABYTE));
