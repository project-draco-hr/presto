{
  checkState(!Thread.holdsLock(lock),"Can not set state while holding the lock");
  while (true) {
    T currentState=get();
    if (currentState.equals(newState)) {
      return false;
    }
    if (!predicate.apply(currentState)) {
      return false;
    }
    if (compareAndSet(currentState,newState)) {
      return true;
    }
  }
}
